# Stage 1: Build
FROM node:22-alpine AS builder

WORKDIR /build

# Copy package files
COPY crm-agent-portal/package.json crm-agent-portal/package-lock.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY crm-agent-portal/src ./src
COPY crm-agent-portal/index.html ./
COPY crm-agent-portal/vite.config.js ./

# Build application
RUN npm run build

# Stage 2: Runtime
FROM nginx:alpine

# Install curl for health checks
RUN apk add --no-cache curl

# Copy nginx config
COPY dockerfiles/nginx.conf /etc/nginx/nginx.conf

# Copy built app from builder
COPY --from=builder /build/dist /usr/share/nginx/html

# Expose port
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost/health || exit 1

# Run nginx
CMD ["nginx", "-g", "daemon off;"]
